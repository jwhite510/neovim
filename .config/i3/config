# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 80 px or 80 ppt
        bindsym j resize grow height 80 px or 80 ppt
        bindsym k resize shrink height 80 px or 80 ppt
        bindsym l resize grow width 80 px or 80 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 80 px or 80 ppt
        bindsym Down resize grow height 80 px or 80 ppt
        bindsym Up resize shrink height 80 px or 80 ppt
        bindsym Right resize grow width 80 px or 80 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Control+braceleft mode "default"
}

bindsym $mod+r mode "resize"


mode "vim_keys" {
	bindsym --release k exec xdotool key Up
	bindsym --release j exec xdotool key Down
	bindsym --release l exec xdotool key Right
	bindsym --release h exec xdotool key Left

	bindsym --release Control+j exec xdotool key KP_Enter

	bindsym --release w exec xdotool key ctrl+Right
	bindsym --release e exec xdotool key ctrl+Right
	bindsym --release b exec xdotool key ctrl+Left

        bindsym Escape mode "default"
        bindsym Control+braceleft mode "default"
}

bindsym $mod+n mode "vim_keys"


